# Keyboard
# -----------------------------------------------------------------------------
setxkbmap -layout us
setxkbmap -variant dvorak				# The superior keyboard layout
setxkbmap -option						# Clear any previously set options
setxkbmap -option ctrl:ralt_rctrl		# Right alt becomes right control
setxkbmap -option ctrl:swap_lalt_lctl	# Swaps left and alt left control
setxkbmap -option caps:escape			# Capslock becomes escape
setxkbmap -option altwin:prtsc_rwin		# Print screen becomes right super
